<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/clockColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick clock color:" />

    <Spinner
        android:id="@+id/spinnerClock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/hourColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick hour hand color:" />

    <Spinner
        android:id="@+id/spinnerHour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/minuteColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick minute hand color:" />

    <Spinner
        android:id="@+id/spinnerMinute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/secondColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick second hand color:" />

    <Spinner
        android:id="@+id/spinnerSecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>